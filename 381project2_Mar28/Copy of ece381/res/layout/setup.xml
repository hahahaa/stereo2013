<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background= "@drawable/background"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to EECE 381 Project 2 Group 14"
        android:gravity="center"
        android:textColor="#222"
        android:textSize="26sp"
        android:textStyle="bold" />
      <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="..."
        android:gravity="center"
        android:textColor="#222"
        android:textSize="26sp"
        android:textStyle="bold" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Setup Middleman IP:"
        android:gravity="left"
        android:textColor="#222"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >


        <EditText
            android:id="@+id/ipEdit"
       		 android:hint="Ex: 195.168.1.5"
            android:textColor="#333333"
	        android:textSize="22sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>     
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Setup Middleman Port:"
        android:gravity="left"
        android:textColor="#222"
        android:textSize="20sp"
        android:textStyle="bold" />    
        
         <EditText
            android:id="@+id/portEdit"
       		 android:hint="Ex: 60002"
            android:textColor="#333333"
	        android:textSize="22sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>     
            
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
       
        <Button
        android:text="Clear" 
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="onClearClick"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
        <Button
        android:text="Confirm" 
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="onConfirmClick"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:id="@+id/infoText"
        android:textColor="#222"        
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    </LinearLayout>

    <Button
        android:text="START" 
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="onStartClick"
        android:layout_width="fill_parent"
        android:layout_height="100dp"/>

</LinearLayout>